<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% if @user.image? %>
        <%= image_tag user.image.variant(resize: '150x150'), class: "rounded-circle" %>
      <%else%>
        <%= image_tag "no_image.jpeg", size: "150x150", class: "rounded-circle" %>
      <%end%>

      <h4><%= @user.account_name %></h4>
      <%= @user.user_name %>
    </div>
  </div>
</div>