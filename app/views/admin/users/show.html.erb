<div class="container">
  <div class="row">
    <div class="col-9 offset-md-2">
      <strong><h4>ユーザー情報</h4></strong>
      <table class="table-bordered">
        <tr>
          <th>アカウントネーム</th>
          <td><%= @user.account_name %></td>
        </tr>
        <tr>
          <th>ユーザーネーム</th>
          <td><%= @user.user_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success btn-sm" %>
    </div>
  </div>
</div>