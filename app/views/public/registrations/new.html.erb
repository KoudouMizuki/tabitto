<div class="container">
  <div class="row">
    <div class="col-lg-12 offset-md-2">
      <h4><strong>ユーザー新規登録</strong></h4>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">アカウント名</div>
          <%= f.text_field :account_name, class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">ユーザーネーム</div>
          <%= f.text_field :user_name, class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">メールアドレス</div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">パスワード（６文字以上）</div>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">パスワード（確認用）</div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label"></div>
          <%= f.submit "アカウントを作成", class: "btn btn-success col-3 btn-sm" %>
        </div>
      <%end%>
      <h5><strong>アカウント作成済みの方</strong></h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
