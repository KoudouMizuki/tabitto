<div class="container">
  <div class="row">
    <div class="col-8 offset-md-2 mt-3">
      <strong><h4>管理者ログイン</h4></strong>
      <%= form_with model: @admin, url: new_admin_session_path do |f| %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">メールアドレス</div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">パスワード</div>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-6" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label"></div>
           <%= f.submit "ログイン", class: "btn btn-primary btn-sm col-6 " %>
        </div>
      <%end%>
    </div>
  </div>
</div>


