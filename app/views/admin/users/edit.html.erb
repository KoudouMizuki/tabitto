<div class="container">
  <div class="row">
    <div class="col-8 offset-md-2">
      <strong><h4>ユーザー情報編集画面</h4></strong>
      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">アカウントネーム</div>
          <%= f.text_field :account_name %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">ユーザーネーム</div>
          <%= f.text_field :user_name %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">メールアドレス</div>
          <%= f.text_field :email %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label"></div>
          <%= f.submit "編集を保存" %>
        </div>
      <%end%>
    </div>
  </div>
</div>