<div class="container">
  <div class="row">
    <div class="col-lg-12 offset-md-2">
      <% if @user.user_image.attached? %>
        <%= image_tag @user.user_image.variant(resize: '150x150^', gravity: "center", crop: "200x200+0+0"), class: "rounded-circle " %>
      <%else%>
        <%= image_tag "no_image.jpeg", size: "150x150", class: "rounded-circle" %>
      <%end%>

      <h4><%= @user.account_name %></h4>
      <%= @user.user_name %>
      <%= link_to "プロフィールを編集", edit_user_path(@user.id), class: "btn btn-success col-4 btn-sm" %>
      <%= link_to "お気に入り一覧", favorites_path(current_user.id), class: "btn btn-primary btn-sm" %>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-3">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.post_image.variant(resize: '300x300^', gravity: "center", crop: "200x200+0+0") %>
        <%end%>
      </div>
    <%end%>
  </div>
</div>