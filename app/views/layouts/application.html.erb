<!DOCTYPE html>
<html>
  <head>
    <title>Shere旅っと！</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('logo.jpg') %></a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to root_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    ホーム<i class="fas fa-search"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to users_mypage_path(current_user), class: "btn btn-secondary mr-3 mt-1" do %>
                    マイページ<i class="fas fa-user"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to new_post_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    投稿<i class=" fas fa-light fa-map-pin"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-secondary mr-3 mt-1" do %>
                    ログアウト<i class="fas fa-sign-out-alt"></i>
                  <%end%>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to admin_users_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    user一覧<i class="fas fa-duotone fa-users"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to admin_comments_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    コメント一覧<i class="fas fa-solid fa-comment"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class: "btn btn-secondary mt-1" do %>
                    ログアウト<i class="fas fa-sign-out-alt"></i>
                  <%end%>
                </li>
              <%else%>
                <li>
                  <%= link_to root_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    ホーム<i class="fas fa-search"></i>
                  <%end%>
                </li
                <li>
                  <%= link_to about_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    About<i class="fas fa-link"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class: "btn btn-secondary mr-3 mt-1" do %>
                    新規登録<i class="fas fa-user-plus"></i>
                  <%end%>
                </li>
                <li>
                  <%= link_to new_user_session_path, class: "btn btn-secondary mt-1" do %>
                    ログイン<i class="fas fa-sign-in-alt"></i>
                  <%end%>
                </li>
              <%end%>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>

