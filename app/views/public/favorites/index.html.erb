<div class="container">
  <div class="row">
    <div class="col-12 mt-3 text-center">
      <% if @favorites.empty? %>
        <h2>お気に入りはありません</h2>
      <%else%>
        <strong><h4>お気に入り一覧</h4></strong>
      <% end %>
    </div>
  </div>
  
  <p class="br2">

  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-3">
        <%= link_to post_path(favorite.post.id) do %>
          <%= image_tag favorite.post.post_image.variant(resize: '300x300^', gravity: "center", crop: "200x200+0+0") %>
        <%end%>
      </div>
    <%end%>
  </div>
</div>


<style>
  .br2 {
  border-bottom: 3px solid #999999;
}
</style>