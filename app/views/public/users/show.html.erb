<div class="container">
  <div class="row">
    <div class="col-lg-12 offset-md-2">
      <% if @user.user_image.attached? %>
        <%= image_tag @user.user_image.variant(resize: '150x150'), class: "rounded-circle " %>
      <%else%>
        <%= image_tag "no_image.jpeg", size: "150x150", class: "rounded-circle" %>
      <%end%>

      <h4><%= @user.account_name %></h4>
      <%= @user.user_name %>
      <%= link_to "プロフィールを編集", edit_user_path(@user.id), class: "btn btn-success col-4 btn-sm" %>
    </div>
  </div>

  <div calss="row">
    <div class="col-3">
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.post_image.variant(resize: '200x300') %>
        <%end%>
      <%end%>
    </div>
  </div>
</div>