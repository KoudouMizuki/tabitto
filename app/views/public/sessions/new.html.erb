<div class="container">
  <div class="row">
    <div class="col-lg-12 offset-md-2">
      <h4><strong>ユーザーログイン</strong></h4>
      <%= form_with model: @user, url: new_user_session_path do |f| %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">アカウント名</div>
          <%= f.text_field :account_name, class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">メールアドレス</div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">パスワード</div>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-3" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label"></div>
          <%= f.submit "ログイン", class: "btn btn-primary col-3 btn-sm" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-group"></div>
          <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "btn btn-success col-3 btn-sm" %>
        </div>

        <h5><strong>アカウント作成が済んでいない方</strong></h5>
        <%= render "public/shared/links" %>
      <%end%>
    </div>
  </div>
</div>