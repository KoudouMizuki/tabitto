<div class="container">
  <div class="row">
    <div class="col-9 offset-md-2">
      <div class="mt-3 mb-1">
        <% if @post.user == current_user %>
          <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-secondary btn-sm " %>
          <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn btn-danger btn-sm" %>
        <%end%>
      </div>
    </div>

    <div class="col-9 offset-md-2">
      <%= link_to user_path(@user.id) do %>
        <table>
          <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <td>
              <% if @user.user_image.attached? %>
                <%= image_tag @user.user_image.variant(resize: '40x40^', gravity: "center", crop: "40x40+0+0"), class: "rounded-circle mr-3 " %>
              <%else%>
                <%= image_tag "no_image.jpeg", size: "150x150", class: "rounded-circle" %>
              <%end%>
            </td>
            <td><strong><%= @user.account_name %></strong></td>
          </tbody>
        </table>
      <%end%>
      <%= image_tag @post.post_image.variant(resize: '800x600') %><br/>
      <p class="br2">

        <% @post.tags.each do |tag| %>
          <div class="tag">
            <%= tag.name %>
          </div>
        <%end%>

      <% if @post.favorite?(current_user) %>
        <p>
          <%= link_to post_favorites_path(@post.id), method: :delete do %>
            <span style= "color:yellow">★</span>お気に入りを解除
          <% end %>
        </p>
      <% else %>
        <p>
          <%= link_to post_favorites_path(@post.id), method: :post do %>
            <span>☆</span>お気に入りに登録
          <% end %>
        </p>
      <% end %>

      <strong><h2><%= @post.name %></h2></strong>
      <table class="table table-bordered">
        <tr>
          <th class="col-md-3">【説明】</th><td><%= @post.introduction %></td>
        </tr>
        <tr>
          <th class="col-md-3">【季節】</th><td><%= @post.season_i18n %></td>
        </tr>
        <tr>
          <th class="col-md-3">【駐車場】</th><td><%= @post.parking_i18n %></td>
        </tr>
        <tr>
          <th class="col-md-3">【交通手段】</th><td><%= @post.transportation_i18n %></td>
        </tr>
        <tr>
          <th class="col-md-3">【登録日】</th><td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </table>


      <p class="br2">

    </div>
  </div>
  <div class="row">
    <div class="col-12 offset-md-2">
      <strong><h4>コメント一覧</h4></strong>
      <table>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= image_tag comment.user.user_image.variant(resize: '35x35^', gravity: "center", crop: "35x35+0+0"), class: "rounded-circle mb-3 " %></td>
              <td>
                <strong><%= comment.user.account_name %></strong><br>
                 <%= comment.comment %>
                 <%= link_to "削除", post_comment_path(@post, comment), method: :delete %>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>

      <%= form_for [@post, @comment] do |f| %>
        <%= f.text_area :comment, size: "40x5" %>
        <%= f.submit "送信", class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>
</div>


<style>
.br2 {
  border-bottom: 3px solid #999999;
  padding: 5px;
}

strong {
  color: black;
}

.tag {
	position: relative;
	display: inline-block;
	margin: 0 .6em .6em .6em;
	padding: .6em .6em .6em 1.2em;
	line-height: 1;
	color: #fff;
	text-decoration: none;
	background-color: #0000ee;
}
.tag:before {
	position: absolute;
	top: 0;
	left: -1em;
	content: '';
	border-width: 1.1em 1em 1.1em 0;
	border-style: solid;
	border-color: transparent #0000ee transparent transparent;
}
.tag:after {
	position: absolute;
	top: center;
	left: 0;
	content: '●';
	color: #fff;
}
先が丸まったタグ風

</style>
