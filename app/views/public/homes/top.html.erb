<div class="container">
  <div class="row">
    <div class="col-12 mt-3">
      <div class="col-12 mb-2">
        <input id="address" type="textbox">
      <input type="button" value="検索" onclick="codeAddress()">
      </div>

      <div id="display"></div>
      <div id='map'></div>

      <style>
        #map {
          height: 600px;
          width: 100%;
        }
      </style>

      <script>
        let map
        let geocoder
        const display = document.getElementById('display')

        function initMap(){
          geocoder = new google.maps.Geocoder()

          map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: 35.68944, lng:139.69167},
            zoom: 12,
          });

          marker = new google.maps.Marker({
            position:  {lat: 35.68944, lng:139.69167},
            map: map
          });
        }

        function codeAddress(){
          let inputAddress = document.getElementById('address').value;

          geocoder.geocode( { 'address': inputAddress}, function(results, status) {
            if (status == 'OK') {
              map.setCenter(results[0].geometry.location);
              var marker = new google.maps.Marker({
                map: map,
                position: results[0].geometry.location
              });
              display.textContent = "検索結果：" + results[ 0 ].geometry.location
            } else {
              alert('該当する結果がありませんでした：' + status);
            }
          });
        }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDAFTm4C7rY9xYaVyt4MAi7Rs05F6BO38M&callback=initMap" async defer></script>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-4">
      <h4><strong>最近追加されたスポット</strong></h4>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
        <div class="col-3">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.post_image.variant(resize: '300x300^', gravity: "center", crop: "200x200+0+0") %>
          <%end%>
        </div>
      <%end%>
  </div>
</div>